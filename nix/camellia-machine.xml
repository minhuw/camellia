            <source file='/opt/camellia/nixos.qcow2'/>
            <target dev='hda'/>
        </disk>
        <serial type='pty'>
            <target port='0'/>
        </serial>
        <interface type='network'>
            <source network='default'/>
            <mac address='72:34:54:dd:f3:25'/>
        </interface>
    </devices>
    <features>
          <acpi/>
    </features>
</domain>
