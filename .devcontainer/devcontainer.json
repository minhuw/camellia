{
    "name": "Rattan Dev Container",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/rust:1": {},
        "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
            "packages": "ethtool,iputils-ping,iperf,iperf3,curl,build-essential,gcc-multilib,zlib1g-dev,libelf-dev,libpcap-dev,m4,libclang-dev,llvm,clang,pkg-config,tcpdump"
        },
        "ghcr.io/meaningful-ooo/devcontainer-features/fish:1": {}
    },
    "runArgs": [ "--cap-add=NET_ADMIN", "--cap-add=NET_RAW", "--cap-add=SYS_PTRACE", "--cap-add=SYS_ADMIN", "--security-opt", "apparmor=unconfined", "--ulimit", "nofile=1048576:1048576", "--ulimit", "memlock=67108864:67108864" ],
    "containerEnv": {
        "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_RUNNER": "sudo -E"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot-nightly",
                "github.vscode-github-actions"
            ]
        }
    }
}